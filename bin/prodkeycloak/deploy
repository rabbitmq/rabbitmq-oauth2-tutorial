#!/usr/bin/env bash

SCRIPT="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
ROOT=$SCRIPT/../..
CONF_DIR=${ROOT}/conf/multi-keycloak
CERTS_DIR=${CONF_DIR}/certs
NAME=prodkeycloak

source $SCRIPT/../common

ensure_docker_network
kill_container_if_exist $NAME

if [[ ! -d "${CERTS_DIR}" ]]; then  
	generate-ca-server-client-kpi $NAME $CERTS_DIR
fi

echo "Running $NAME docker image ..."

docker run \
    --detach \
    --name ${NAME} --net rabbitmq_net \
    --publish 8082:8080 \
    --publish 8442:8442 \
    --env KEYCLOAK_ADMIN=admin \
    --env KEYCLOAK_ADMIN_PASSWORD=admin \
    --mount type=bind,source=${CONF_DIR}/prod_import/,target=/opt/keycloak/data/import/ \
    --mount type=bind,source=${CERTS_DIR}/,target=/opt/keycloak/certs/ \
      quay.io/keycloak/keycloak:20.0 start-dev --import-realm \
     --https-certificate-file=/opt/keycloak/certs/server_${NAME}_certificate.pem \
     --https-certificate-key-file=/opt/keycloak/certs/server_${NAME}_key.pem \
     --hostname=${NAME} --hostname-admin=${NAME} --https-port=8442
